{
  "id": "micropress-theme-liquid-glass",
  "name": "Liquid Glass",
  "version": "0.0.4",
  "description": "Inspired by Apple's iOS 26 Liquid Glass design language, this theme transforms your site with translucent glass panels, dynamic backdrop blur effects, and ambient floating light orbs. Features include smooth cubic-bezier animations, specular highlight borders that simulate light refraction, hover-responsive glass cards that lift and glow, and a continuously shifting gradient background. Perfect for modern portfolios, creative agencies, and tech-forward brands seeking a premium, futuristic aesthetic.",
  "author": "MicroPress",
  "homepage": "",
  "keywords": ["glass", "glassmorphism", "liquid", "apple", "ios26", "modern", "animated", "blur", "translucent"],
  "license": "MIT",
  "breakpoints": {
    "sm": "640px",
    "md": "768px",
    "lg": "1024px",
    "xl": "1280px"
  },
  "customizable": {
    "primaryColor": {
      "type": "color",
      "label": "Primary Color",
      "default": "#007AFF"
    },
    "accentColor": {
      "type": "color",
      "label": "Accent Color",
      "default": "#5856D6"
    },
    "backgroundColor": {
      "type": "color",
      "label": "Background Base Color",
      "default": "#1a1a2e"
    },
    "glassOpacity": {
      "type": "select",
      "label": "Glass Opacity",
      "default": "0.12",
      "options": ["0.08", "0.12", "0.16", "0.20"]
    },
    "blurStrength": {
      "type": "select",
      "label": "Blur Strength",
      "default": "24px",
      "options": ["16px", "24px", "32px", "40px"]
    },
    "borderRadius": {
      "type": "select",
      "label": "Border Radius",
      "default": "24px",
      "options": ["12px", "16px", "20px", "24px", "32px"]
    },
    "fontFamily": {
      "type": "select",
      "label": "Font Family",
      "default": "system-ui",
      "options": ["system-ui", "Inter", "SF Pro Display", "Georgia", "Roboto"]
    },
    "contentWidth": {
      "type": "size",
      "label": "Content Width",
      "default": "900px"
    },
    "animationSpeed": {
      "type": "select",
      "label": "Animation Speed",
      "default": "normal",
      "options": ["slow", "normal", "fast"]
    }
  }
}
